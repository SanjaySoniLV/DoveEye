<Window x:Class="DoveEye.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoveEye"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:UI x:Key="userinterface"></local:UI>
    </Window.Resources>
    <Grid x:Name="Grid" DataContext="{StaticResource userinterface}">
        <TextBlock HorizontalAlignment="Left" Margin="20,18,0,0" TextWrapping="Wrap" Text="DoveVision Beta 0.1" VerticalAlignment="Top" Width="762" Height="41" FontSize="36" FontFamily="Century Gothic"/>
        <Button x:Name="btnSelectSource" Content="Select Source Directory..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="184" Margin="20,78,0,0"  Height="27" Click="btnSelectSource_Click"/>
        <Label x:Name="lblSourceDirectory" Content="{Binding Path=textforlabel}" HorizontalAlignment="Left" Margin="209,78,0,0" VerticalAlignment="Top" Height="27"/>
        <Button x:Name="btnStartAnalysis" Content="Start Analysis" HorizontalAlignment="Left" Margin="20,119,0,0" VerticalAlignment="Top" Width="184" Height="29" Click="btnStartAnalysis_Click"/>
    </Grid>
</Window>
